<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0062B6" >

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="120dp" 
        android:gravity="center">

        <TextView
            android:id="@+id/Listview_header_profilename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/profile_image"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="K Santosh"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/Listview_header_specalization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Physican general"
            android:maxLines="6"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_below="@+id/Listview_header_profilename"
            android:layout_alignLeft="@+id/Listview_header_profilename"
            android:layout_alignStart="@+id/Listview_header_profilename"
            android:layout_marginTop="1dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="center_vertical" 
            android:src="@drawable/profile_image"/>
    </RelativeLayout>

</FrameLayout>