<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/both_match"
    android:background="@android:color/white"
    android:layout_margin="@dimen/pad_5"
    android:orientation="vertical"
    tools:context="com.scottline.patientalliance.patientdemographic.PatientDemographicFragment">

    <LinearLayout
        android:layout_weight="1"
        style="@style/both_match"
        android:background="@color/insurance_background_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageview_insurance"
                style="@style/both_wrap"
                android:background="@drawable/icn_clock" />

            <com.scottline.patientalliance.customviews.Textview_RobotRegular
                style="@style/both_wrap"
                android:text="@string/card_details"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_insurance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                style="@style/both_wrap"
                android:background="@drawable/icn_clock" />

            <com.scottline.patientalliance.customviews.Textview_RobotRegular
                style="@style/both_wrap"
                android:text="@string/insurance"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/pad_5"
        android:layout_marginBottom="@dimen/pad_5"
        android:layout_weight="1"
        style="@style/both_match"
        android:background="@color/green"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_basicinfor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/both_wrap"
                android:background="@drawable/icn_clock" />

            <com.scottline.patientalliance.customviews.Textview_RobotRegular
                style="@style/both_wrap"
                android:text="@string/basic_info"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        style="@style/both_match"
        android:background="@color/insurance_background_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout_campaign"
          style="@style/both_match"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/both_wrap"
                android:background="@drawable/icn_clock" />

            <com.scottline.patientalliance.customviews.Textview_RobotRegular
                style="@style/both_wrap"
                android:text="@string/card_details"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout_service"
          style="@style/both_match"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/both_wrap"
                android:background="@drawable/icn_clock" />

            <com.scottline.patientalliance.customviews.Textview_RobotRegular
                style="@style/both_wrap"
                android:text="@string/service"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
